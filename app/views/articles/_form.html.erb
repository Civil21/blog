<%= form_with model: @article, class:"m-5" do |form| %>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <div>
    <%= form.label :title, class:"form-label" %><br>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div>
    <%= form.label :body, class:"form-label" %><br>
    <%= form.text_area :body,class:"form-control" %>
  </div>
  <div>
    <%= form.label :image, class:"form-label" %><br>
    <%= form.file_field :image,class:"form-control" %>
  </div>
  <div>
    <%= form.label :images, class:"form-label" %><br>
    <%= form.file_field :images, multiple: true,class:"form-control" %>
  </div>
  <hr>
  <div>
    <%= form.submit nil ,class:"btn btn-success" %>
  </div>
<% end %>
