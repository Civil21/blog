<%= image_tag @article.image if @article.image.attached? %>
<h1><%=@article.title%></h1>
<div class="">
  <%= link_to "Edit", edit_article_path(@article), class:"btn btn-warning"%>
</div>
<p><%=@article.body%></p>
<%=render "articles/show/images", images: @article.images%>

<h2>Comments:</h2>
<div class="">
  <%=render @comments%>
</div>
<div class="">
  <%= render "comments/form"%>
</div>
